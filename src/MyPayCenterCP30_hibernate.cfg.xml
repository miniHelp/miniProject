<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

	<session-factory>
        
        <!-- 連線池c3p0設定-->
		<property name="hibernate.connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
		<property name="hibernate.connection.url">jdbc:oracle:thin:@192.168.0.23:1521:zvo11g01</property>
		<property name="hibernate.connection.username">mypaycenter</property>
		<property name="hibernate.connection.password">myPay4Zv</property>
		<property name="hibernate.connection.provider_class">org.hibernate.connection.C3P0ConnectionProvider</property>
		<property name="hibernate.c3p0.min_size">5</property>
		<property name="hibernate.c3p0.max_size">20</property>
		<property name="hibernate.c3p0.timeout">1800</property>
		<property name="hibernate.c3p0.max_statements">50</property>
        
		<!--SQL方言,以下使用Oracle -->
		<property name="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</property>

		<!--是否要顯示實際操作資料庫時的SQL -->
		<property name="hibernate.show_sql">true</property>

        <!-- Disable the second-level cache -->
        <property name="hibernate.cache.provider_class">org.hibernate.cache.NoCacheProvider</property>

		<!--交易管理類型, 以下使用JDBC Transaction -->
		<property name="hibernate.transaction.coordinator_class">jdbc</property>
        
        <!-- Enable Hibernate's automatic session context management -->
		<property name="hibernate.current_session_context_class">thread</property>

        <!-- 告訴Hibernate不是使用預設的單純JDBC連線池 (這是Hibernate4開始有的新設定) -->
        <!-- 目前因為是使用c3p0連線池，才需要加入此設定 -->
        <property name="hibernate.temp.use_jdbc_metadata_defaults">false</property>

		<!-- 物件與資料庫表格映射文件，mapping屬性改class，值為類別全名 -->
		<mapping resource="onlineModel/platform.hbm.xml" />
		<mapping resource="onlineModel/paymentPlatformMethod.hbm.xml" />

	</session-factory>
	
</hibernate-configuration>
